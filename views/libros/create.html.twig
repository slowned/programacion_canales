<link rel="stylesheet" type="text/css" href="../../assets/css/usuario_form.css">

<form name='libroForm' id='libroForm' action='index.php' method='POST'>
  <input type="hidden" name="controller" value="LibroController">
  <input type="hidden" name="action" value="store">

  <h2>Registro de Libros</h2>

  <label for="titulo">Titulo del libro</label>
  <input type="text" name="titulo" id="titulo">

  <label for="portada">Portada</label>
  <input type="file" name="portada" id="portada">

  <label for="descripcion">Descripcion</label>
  <input type="text" name="descripcion" id="descripcion">

  <label for="cantidad">Cantidad de ejemplares</label>
  <input type="numbre" name="cantidad" id="cantidad">

  <label for="autor">Autor del Libro</label>
  <select id="AutorLibro" name="AutorLibro">
    {% for autor in autores %} 
    <option value="{{ autor.id }}"> {{ autor.apellido }} {{ autor.nombre }}</option>
    {% endfor %}
  </select>

  <input type="submit" name="btn" id="btn" value="registrar">

</form>
